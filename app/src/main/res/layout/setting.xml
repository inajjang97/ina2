<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src= "@drawable/set_title"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bu_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/done"/>

        <ImageView
            android:id="@+id/t1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/name"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_below="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/back_col"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"/>

        <RadioButton
            android:id="@+id/back_col"
            android:layout_below="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:id="@+id/t3"
            android:layout_below="@+id/t2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/font_col"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"/>

        <RadioButton
            android:id="@+id/font_col"
            android:layout_below="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>


        <LinearLayout
            android:layout_weight="9"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tab_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b1" />

            <ImageView
                android:id="@+id/tab_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b2"  />

            <ImageView
                android:id="@+id/tab_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b3"  />

            <ImageView
                android:id="@+id/tab_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b4"  />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>