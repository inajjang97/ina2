<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src= "@drawable/d_title"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_above="@id/tab">

        <ImageView
            android:id="@+id/d_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/d_note3"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/t_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/edit_date"
            android:layout_toRightOf="@+id/t_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/t_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/t_date"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/t_title"
            android:layout_marginTop="40dp"
            android:textSize="10dp"/>

        <ScrollView
            android:layout_below="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/edit_con"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>


        <ImageView
            android:id="@+id/bu_write"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sb1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/bu5"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tab_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="DIARY"
        android:textSize="20dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tab_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="PICTURE"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/tab_diary"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="28dp"
        />
    <TextView
        android:id="@+id/tab_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="LETTER"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/tab_pic"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tab_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SETTING"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/tab_letter"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="22dp"
        />
</RelativeLayout>